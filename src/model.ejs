<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Relatório</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      html,
      body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
      }

      table {
        width: 100%;
      }

      th {
        text-align: left;
      }
    </style>
  </head>
  <body class="bg-purple-100">
    <div class="m-3">
      <h1 class="text-2xl my-4">Listagem de passageiros</h1>
      <table class="border-[1px] border-gray-400 text-sm">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Número do voo</th>
            <th>Horário</th>
          </tr>
        </thead>
        <tbody>
          <% if (passengers.length > 0) { %> <% passengers.forEach(passenger => { %>
          <tr>
            <td><%= passenger.name %></td>
            <td><%= passenger.flightNumber %></td>
            <td><%= passenger.time %></td>
          </tr>
          <% }); %> <% } %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="2"><%=passengers.length%> passageiros</td>
          </tr>
        </tfoot>
      </table>
    </div>
  </body>
</html>
